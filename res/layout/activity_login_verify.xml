<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activity.LoginVerifyActivity" >
    <RelativeLayout 
        android:id="@+id/login_verify_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#BFEFFF">
    </RelativeLayout>
    <LinearLayout 
	    android:id="@+id/login_verify_lin"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_below="@+id/login_verify_layout"
	    >
    <TextView 
        android:id="@+id/login_verify_tele"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="注册账号"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/login_verify_telelin1"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/login_verify_lin"
	    >
    <TextView 
        android:id="@+id/login_verify_teletex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:text="手机号码"/>
    <EditText 
        android:id="@+id/login_verify_teleedi1"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/login_verify_telelin2"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/login_verify_telelin1"
	    >
    <TextView 
        android:id="@+id/login_verify_teletex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="35dp"
        android:text="验证码"/>
    <EditText 
        android:id="@+id/login_verify_teleedi2"
        android:layout_width="110dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
    <Button
	        android:id="@+id/login_verify_btn1"
	        android:layout_width="80dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="10dp"
	        android:textSize="15sp"
	        android:text="获取验证码"
	        android:background="#71C671"
	        android:textColor="#000000"
	        android:onClick="login_verify_ver1"
	        />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/login_verify_telelin3"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/login_verify_telelin2"
	    >
    <TextView 
        android:id="@+id/login_verify_teletex3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:text="设置密码"/>
    <EditText 
        android:id="@+id/login_verify_teleedi3"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:inputType="textPassword"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/login_verify_telelin4"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/login_verify_telelin3"
	    >
    <TextView 
        android:id="@+id/login_verify_teletex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:text="确认密码"/>
    <EditText 
        android:id="@+id/login_verify_teleedi4"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:inputType="textPassword"
	    android:textSize="15sp"/>
	</LinearLayout>
	<Button
	        android:id="@+id/login_verify_btn2"
	        android:layout_below="@+id/login_verify_telelin4"
	        android:layout_width="90dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="40dp"
	        android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
	        android:textSize="15sp"
	        android:text="下一步"
	        android:background="#71C671"
	        android:textColor="#000000"
	        android:onClick="login_verify_ver2"
	        />
</RelativeLayout>
