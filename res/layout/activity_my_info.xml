<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
    <RelativeLayout 
        android:id="@+id/my_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#BFEFFF">
    </RelativeLayout>
    <LinearLayout 
	    android:id="@+id/my_info_lin1"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_below="@+id/my_info_layout"
	    >
    <TextView 
        android:id="@+id/my_info_tex1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="我的信息"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_info_lin2"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/my_info_lin1"
	    >
    <TextView 
        android:id="@+id/my_info_tex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:text="昵称"/>
    <EditText 
        android:id="@+id/my_info_edi2"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_info_lin3"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/my_info_lin2"
	    >
    <TextView 
        android:id="@+id/my_info_tex3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="真实姓名"/>
    <EditText 
        android:id="@+id/my_info_edi3"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_info_lin4"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/my_info_lin3"
	    >
    <TextView 
        android:id="@+id/my_info_tex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:text="性别"/>
    <RadioGroup 
        android:id="@+id/radio_sex"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <RadioButton 
            android:id="@+id/boy"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="男"
            android:layout_marginLeft="30dp"/>
        <RadioButton 
            android:id="@+id/girl"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="女"
            android:layout_marginLeft="30dp"/>
    </RadioGroup>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_info_lin5"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/my_info_lin4"
	    >
    <TextView 
        android:id="@+id/my_info_tex5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="出生日期"/>
    <Button
        android:id="@+id/order_startdate"
        android:layout_width="200dp"
	    android:layout_height="35dp"
        android:text="出生年月日" 
        android:textSize="15sp"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_info_lin6"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/my_info_lin5"
	    >
    <TextView 
        android:id="@+id/my_info_tex6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:text="身高"/>
    <EditText 
        android:id="@+id/my_info_edi6"
        android:layout_width="170dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
    <TextView 
        android:id="@+id/my_info_tex6_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="CM"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_info_lin7"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/my_info_lin6"
	    >
    <TextView 
        android:id="@+id/my_info_tex7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:text="体重"/>
    <EditText 
        android:id="@+id/my_info_edi7"
        android:layout_width="170dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
    <TextView 
        android:id="@+id/my_info_tex7_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="KG"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/my_info_lin8"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/my_info_lin7"
	    >
    <TextView 
        android:id="@+id/my_info_tex8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:text="血型"/>
    <EditText 
        android:id="@+id/my_info_edi8"
        android:layout_width="170dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
    <TextView 
        android:id="@+id/my_info_tex8_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="型"/>
	</LinearLayout>
	<Button
	        android:id="@+id/my_info_btn1"
	        android:layout_below="@+id/my_info_lin8"
	        android:layout_width="90dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="10dp"
	        android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
	        android:textSize="15sp"
	        android:text="保存"
	        android:background="#71C671"
	        android:textColor="#000000"
	        android:onClick="my_info_ver2"></Button>
</RelativeLayout>