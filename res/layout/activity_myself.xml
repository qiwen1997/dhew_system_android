<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activity.MyselfActivity" >
    <RelativeLayout 
        android:id="@+id/myself_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#BFEFFF">
    </RelativeLayout>
    <LinearLayout 
	    android:id="@+id/myself_lin1"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_below="@+id/myself_layout"
	    android:layout_marginTop="10dp"
	    >
    <TextView 
        android:id="@+id/myself_tex1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="昵  称"/>
	</LinearLayout>
    <Button 
        android:id="@+id/myself_but1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_line_while"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:paddingStart="40dp"
        android:textSize="20sp"
        android:text="我的信息"
        android:layout_below="@+id/myself_lin1"/>
    <Button 
        android:id="@+id/myself_but2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_line_while"
        android:gravity="center_vertical"
       android:paddingStart="40dp"
        android:textSize="20sp"
        android:text="我的紧急联系人"
        android:layout_below="@+id/myself_but1"/>
    <Button 
        android:id="@+id/myself_but3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_line_while"
        android:gravity="center_vertical"
       android:paddingStart="40dp"
        android:textSize="20sp"
        android:text="我的车辆"
        android:layout_below="@+id/myself_but2"/>
    <Button 
        android:id="@+id/myself_but4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_line_while"
        android:gravity="center_vertical"
       android:paddingStart="40dp"
        android:textSize="20sp"
        android:text="我的公司"
        android:layout_below="@+id/myself_but3"/>
    <Button 
        android:id="@+id/myself_but5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_line_while"
        android:gravity="center_vertical"
        android:layout_marginTop="70dp"
       android:paddingStart="40dp"
        android:textSize="20sp"
        android:text="设置"
        android:layout_below="@+id/myself_but4"/>
    <Button 
        android:id="@+id/myself_but6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_line_while"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:textSize="20sp"
        android:text="关于我们"
        android:layout_below="@+id/myself_but5"/>
    <Button 
        android:id="@+id/myself_but7"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border_line_while"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:textSize="20sp"
        android:text="帮助与反馈"
        android:layout_below="@+id/myself_but6"/>
     <Button 
        android:id="@+id/myself_but8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:text="注销"
        android:layout_below="@+id/myself_but7"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
