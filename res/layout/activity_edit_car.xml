<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activity.EditCarActivity" >
    <RelativeLayout 
        android:id="@+id/edit_car_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#BFEFFF">
        <Button
            android:id="@+id/edit_car_but1" 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="删除"
            android:textSize="15sp"
            android:background="#BFEFFF"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
	<LinearLayout 
	    android:id="@+id/edit_car_lin1"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/edit_car_layout"
	    >
    <TextView 
        android:id="@+id/edit_car_tex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="车牌号码"/>
    <EditText 
        android:id="@+id/edit_car_edi1"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/edit_car_lin2"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/edit_car_lin1"
	    >
    <TextView 
        android:id="@+id/edit_car_tex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="车辆类型"/>
    <EditText 
        android:id="@+id/edit_car_edi2"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
	</LinearLayout>
    <LinearLayout 
	    android:id="@+id/edit_car_lin3"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/edit_car_lin2"
	    >
    <TextView 
        android:id="@+id/edit_car_tex3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="品牌型号"/>
    <EditText 
        android:id="@+id/edit_car_edi3"
        android:layout_width="200dp"
	    android:layout_height="30dp"
	    android:background="@drawable/login_editbox"
	    android:singleLine="true"
	    android:textColor="#000"
	    android:textSize="15sp"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/edit_car_lin4"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="100dp"
	    android:layout_below="@+id/edit_car_lin3"
	    >
    <TextView 
        android:id="@+id/edit_car_tex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:text="设置当前"/>
    <ToggleButton 
        android:id="@+id/edit_car_but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="60dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/button_select"/>
	</LinearLayout>
	<Button
	        android:id="@+id/edit_car_btn3"
	        android:layout_below="@+id/edit_car_lin4"
	        android:layout_width="90dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="90dp"
	        android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
	        android:textSize="15sp"
	        android:text="保存"
	        android:background="#71C671"
	        android:textColor="#000000"
	        android:onClick="edit_car_ver2"></Button>
</RelativeLayout>
